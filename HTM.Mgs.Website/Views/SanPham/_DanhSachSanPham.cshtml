@using MvcContrib.UI.Grid;
@using HTM.Mgs.Models;
@model PagedList.IPagedList<SanPham>
@using PagedList.Mvc;
@using HTM.Mgs.HtmlEx
@using HTM.Mgs.HtmlExtension
@{
    var session = (HTM.Mgs.Common.UserLogin)Session[HTM.Mgs.Common.CommonConstants.USER_SESSION];
}
<style>
    .centerBlock {
        display: table;
        margin: auto;
    }

</style>
<div class="card-body">
    <div class="table table-bordered table-striped">
        @if (@session.NhomQuyenSuDungID == "ADMIN")
        {
            @Html.Grid(Model).Columns(column =>
        {
    column.Custom(@<div class="dropdown grid-command">
                    <div class="sett" data-toggle="dropdown"></div>
                    <ul class="dropdown-menu sett_dropdown-caret">

                            <li class="pop_arrow_new"></li>
                            <li><span><a href="/SanPham/Form/@item.SanPhamId"><i class="fas fa-edit"></i>Hiệu chỉnh</a></span></li>
                            <li onclick="ChangeStatus(@item.SanPhamId)"><span><i class="fas fa-ban"></i> @(item.TrangThai == true ? "Vô hiệu" : "Kích hoạt")</span></li>
                            <li onclick="Delete(@item.SanPhamId)" class="cmd-save"><span><i class="fas fa-trash"></i> Xóa</span></li>
                            <li class="pop_arrow_new"></li>
                    </ul>
                </div>).Named("<i class='far fa-hand-point-up'></i>").Attributes(style => "text-align:center;width:5%");
            column.For(m => Html.Raw("<div class='btn-group'>"
            + "<a href='#' onclick='LoadSanPhamChiTiet(" + m.SanPhamId + ")' data-toggle='modal' data-target='.bd-example-modal-lg'>" + m.MaSanPham + "</a>" + "</div>")).Named("Mã sản phẩm").Attributes(style => "width:15%");
            column.For(m => m.TenSanPham).Named("Tên sản phẩm").Attributes(style => "width:10%");
            column.For(m => Html.Raw("<img src ='" + m.GetDefautThumbnail() + "'style='width:100% ' />")).Named("Ảnh").Attributes(style => "width:15%");
            column.For(m => m.Gia).Named("Đơn giá").Attributes(style => "width:15%");
            column.For(m => m.SoLuong).Named("Số lượng").Attributes(style => "width:15%");
            column.For(m => m.NguoiTao).Named("Người tạo").Attributes(style => "width : 15%");
            column.For(m => Html.StatusDisplay(m.TrangThai)).Named("Trạng thái").Attributes(style => "width:5%").HeaderAttributes(style => "width: 5% ,text-align:center;");
        }).Empty("Chưa có dữ liệu sản phẩm")
        }
        else if (@session.NhomQuyenSuDungID == "MOD")
        {
            @Html.Grid(Model).Columns(column =>

         {
              column.Custom(@<div class="dropdown grid-command">
                    <div class="sett" data-toggle="dropdown"></div>
                    <ul class="dropdown-menu sett_dropdown-caret">
                        <li class="pop_arrow_new"></li>
                        <li onclick="LoadSanPhamChiTiet(@item.SanPhamId)" data-toggle="modal" data-target=".bd-example-modal-lg"><span><i class="fas fa-edit"></i>Chi tiết sản phẩm</span></li>
                    </ul>
                </div>).Named("<i class='far fa-hand-point-up'></i>").Attributes(style => "text-align:center;width:5%");
 column.For(m => m.MaSanPham).Named("Mã sản phẩm").Attributes(style => "width:10%");
 column.For(m => m.TieuDe).Named("Tiêu đề").Attributes(style => "width:15%");
 column.For(m => Html.Raw("<img src ='" + m.GetDefautThumbnail() + "'style='width:100% ' />")).Named("Ảnh").Attributes(style => "width:15%");
 column.For(m => m.SoLuong).Named("Số lượng").Attributes(style => "width:19%");
 column.For(m => m.Gia).Named("Giá").Attributes(style => "width:10%");
 column.For(m => m.TheLoai.TenTheLoai).Named("Thể loại").Attributes(style => "width:10%");
 column.For(m => m.NgayTao).Named("Ngày tạo").Attributes(style => "width:5%");
 column.For(m => m.NguoiTao).Named("Người tạo").Attributes(style => "width:5%");
 column.For(m => m.SoLuong * m.Gia).Named("Tổng tiền").Attributes(style => "width:10%");

}).Empty("Chưa có dữ liệu sản phẩm")
        }
        else if (@session.NhomQuyenSuDungID == "EMPLOYEE")
        {
            @Html.Grid(Model).Columns(column =>
        {
       column.Custom(@<div class="dropdown grid-command">
                    <div class="sett" data-toggle="dropdown"></div>
                    <ul class="dropdown-menu sett_dropdown-caret">
                        <li class="pop_arrow_new"></li>
                        <li onclick="LoadSanPhamChiTiet(@item.SanPhamId)" data-toggle="modal" data-target=".bd-example-modal-lg"><span><i class="fas fa-edit"></i>Chi tiết</span></li>
                    </ul>
                </div>).Named("<i class='far fa-hand-point-up'></i>").Attributes(style => "text-align:center;width:5%");
column.For(m => m.MaSanPham).Named("Mã sản phẩm").Attributes(style => "width:10%");
column.For(m => m.TenSanPham).Named("Tên sản phẩm").Attributes(style => "width:15%");
column.For(m => m.TieuDe).Named("Tiêu đề").Attributes(style => "width:15%");
column.For(m => Html.Raw("<img src ='" + m.GetDefautThumbnail() + "'style='width:100% ' />")).Named("Ảnh").Attributes(style => "width:20%");
column.For(m => m.Gia).Named("Giá").Attributes(style => "width:15%");
column.For(m => m.TheLoai.TenTheLoai).Named("Thể loại").Attributes(style => "width:15%");
column.For(m => m.NgayTao).Named("Ngày tạo").Attributes(style => "width:15%");


}).Empty("Chưa có dữ liệu sản phẩm")
        }
        else if (@session.NhomQuyenSuDungID == "MEMBER")
        {
            @Html.Grid(Model).Columns(column =>
        {
       column.Custom(@<div class="dropdown grid-command">
                    <div class="sett" data-toggle="dropdown"></div>
                    <ul class="dropdown-menu sett_dropdown-caret">
                        <li class="pop_arrow_new"></li>
                        <li onclick="LoadSanPhamChiTiet(@item.SanPhamId)" data-toggle="modal" data-target=".bd-example-modal-lg"><span><i class="fas fa-edit"></i>Chi tiết sản phẩm</span></li>
                    </ul>
                </div>).Named("<i class='far fa-hand-point-up'></i>").Attributes(style => "text-align:center;width:5%");
column.For(m => m.MaSanPham).Named("Mã sản phẩm").Attributes(style => "width:10%");
column.For(m => m.TenSanPham).Named("Tên sản phẩm").Attributes(style => "width:15%");
column.For(m => m.TieuDe).Named("Tiêu đề").Attributes(style => "width:15%");
column.For(m => Html.Raw("<img src ='" + m.GetDefautThumbnail() + "'style='width:100% ' />")).Named("Ảnh").Attributes(style => "width:20%");
column.For(m => m.Gia).Named("Giá").Attributes(style => "width:15%");
column.For(m => m.TheLoai.TenTheLoai).Named("Thể loại").Attributes(style => "width:15%");
}).Empty("Chưa có dữ liệu sản phẩm")
        }

    </div>
</div>
<div class="form-group centerBlock">
    @Html.PagedListPager(Model, PageCurrent => "javascript:ListStudent(null,null,null," + PageCurrent + ViewBag.MaSanPham + ViewBag.TenSanPham + ")", PagedRenderOptionExtension.ClassicCustomPage)
</div>




