
@{
    ViewBag.Title = "Index";
}

@section header{
    Danh sách sản phẩm đã xóa
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Basic table card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Danh sách sản phẩm</h5>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Thông tin yêu cầu</label>
                                        <div class="card-body">
                                            <div class="row table-responsive">
                                                <div class="table table-bordered table-hover text-center align-middle" id="tblYeuCau">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Page-body end -->
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông tin chi tiết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="ddlForm">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function ListDanhSachYeuCau(PageCurrent) {
            $.ajax({
                url: '/SanPham/_LoadDanhSanPhamDaXoa',
                data: {
                    PageCurrent: PageCurrent
                },
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $("#tblYeuCau").html(data);
                },
                error: function () {

                },
                complete: function (data) {

                }
            });
        }
        ListDanhSachYeuCau();
       
    </script>
}